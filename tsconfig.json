{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["src/__tests__"]
}
